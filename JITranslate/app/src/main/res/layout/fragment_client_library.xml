<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/client_library_container"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.coolcode.jittranslate.ui.clientslibrary.ClientsLibraryFragment">

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/client_books_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:listitem="@layout/client_book_item"/>

    <TextView
        android:id="@+id/default_text"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        style="@style/TextAppearance.JITranslate.Body2"
        android:text="@string/client_library_text"
        android:visibility="gone"
        />


</LinearLayout>