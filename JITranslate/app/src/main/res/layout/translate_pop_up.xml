<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/popup_padding"
    android:background="@drawable/popup_shape"
    android:id="@+id/popup_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/popup_translation"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:lines="1"
        android:textColor="@color/colorPrimary"
        style="@style/TextAppearance.JITranslate.Body2"
        tools:text="Very very very very very long name of the book"
        />
    <ImageButton
        android:id="@+id/popup_close"
        android:layout_width="@dimen/button_popup_close"
        android:layout_height="@dimen/button_popup_close"
        android:src="@drawable/ic_clear"
        android:contentDescription="@drawable/ic_clear">

    </ImageButton>
</LinearLayout>