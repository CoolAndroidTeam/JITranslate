<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textViewStyle">@style/TextAppearance.JITranslate.Body1</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <style name="TextAppearance.JITranslate.MenuItem" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/prompt_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_text_standart</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/textColorPale</item>

    </style>

    <style name="TextAppearance.JITranslate.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/fasthand_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_text_standart</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextAppearance.JITranslate.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/prompt_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_text_standart</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextAppearance.JITranslate.PageNumber" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/prompt_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_page_number</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/textColorPale</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>


    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_text_large</item>
        <item name="fontFamily">@font/fasthand_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">@color/basicGray</item>
        <item name="colorControlActivated">@color/ratingGold</item>

    </style>

</resources>
