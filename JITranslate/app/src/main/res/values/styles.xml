<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textViewStyle">@style/TextAppearance.JITranslate.Body1</item>

    </style>

    <style name="TextAppearance.JITranslate.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/fasthand_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">2sp</item>
        <item name="android:letterSpacing">1</item>
    </style>

    <style name="TextAppearance.JITranslate.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/fasthand_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_text_standart</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextAppearance.JITranslate.PageNumber" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/prompt_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_page_number</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/textColorPale</item>
    </style>

</resources>
